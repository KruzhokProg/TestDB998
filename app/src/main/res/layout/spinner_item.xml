        app:layout_constraintBottom_toBottomOf="@+id/tvHobbyName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvHobbyName"
        app:srcCompat="@drawable/ic_arrow" />
